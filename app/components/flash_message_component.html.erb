<div data-controller='flash' class="max-w-lg w-full <%= css_classes %> border shadow-lg pointer-events-auto ring-1 ring-black ring-opacity-5 overflow-hidden animate__animated animate__fadeInRight">
  <div class="p-4">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <% if danger? %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#FF4D4F]" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <% if notice? %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#1890FF]" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <% if success? %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#52C41A]" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>
      <div class="ml-3 w-0 flex-1 pt-0.5">
        <p class="accent-black/80">
          <%= @message %>
        </p>
      </div>
      <div class="ml-4 flex-shrink-0 flex">
        <button type="button" data-action="click->flash#dismiss" class="rounded-md inline-flex text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-0">
          <span class="sr-only">Close</span>
          <svg class="h-4 w-4" x-description="Heroicon name: solid/x" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>
